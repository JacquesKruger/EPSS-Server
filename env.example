# Application Configuration
APP_NAME=CPR Score Server
VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cpr_score_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# External APIs
EPSS_API_URL=https://api.first.org/data/v1/epss
CVE_API_URL=https://cve.circl.lu/api
EPSS_API_KEY=
CVE_API_KEY=

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=text/csv,application/vnd.ms-excel
UPLOAD_DIR=uploads

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# CPR Score Configuration
CVSS_WEIGHT=0.6
EPSS_WEIGHT=0.4
CPR_THRESHOLDS={"critical": 90, "high": 70, "medium": 40, "low": 0}

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
